{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  // Let Renovatebot keep an opened issue that tracks our dependencies
  "dependencyDashboard": true,
  "enabledManagers": ["cargo", "github-actions"],
  // Update lockfiles once per week
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 5am on Tuesday"
    ]
  },
  "labels": ["dependencies", "automated", "change-log-not-required"],
  "branchPrefix": "automation/renovate/"
}
